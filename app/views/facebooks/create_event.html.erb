<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="page-header line1">
        <h4> Create Event on Facebook </h4>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <%= form_tag({:controller => "facebooks", :action => "send_created_event"},  {:method => "POST", :class => "span12 widget shadowed dark form-horizontal bordered"}) do |f| %>
      <header><h4 class="title">Send Event on Facebook </h4></header>
      <section class="body">
        <div class="body-inner">
          <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">
              <%= text_field_tag "message", nil, :required => true, :class => "span8", :placeholder => "Enter Your Message Here.." %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Start Date</label>
            <div class="controls">
              <%= text_field_tag "start_date", nil, :required => true, :class => "datepicker span8", :placeholder => "Enter Start Date Here.." %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">End Date</label>
            <div class="controls">
              <%= text_field_tag "end_date", nil, :required => true, :class => "datepicker span8", :placeholder => "Enter End Date Here.." %>
            </div>
          </div>

          <div class="form-actions">
            <%= submit_tag "Send", :name => nil, :class => "btn btn-primary" %>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>