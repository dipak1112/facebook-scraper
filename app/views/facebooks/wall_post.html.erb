<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="page-header line1">
        <h4> Post on Facebook Wall </h4>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <%= form_tag({:controller => "facebooks", :action => "send_wall_post"},  {:method => "POST", :class => "span12 widget shadowed dark form-horizontal bordered"}) do |f| %>
      <header><h4 class="title">Update status</h4></header>
      <section class="body">
        <div class="body-inner">
          <div class="control-group">
            <label class="control-label">Message</label>
            <div class="controls">
              <%= text_area_tag "message", nil, :required => true, :class => "span8", :placeholder => "Enter Your Message Here.." %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Picture URL</label>
            <div class="controls">
              <%= text_field_tag "picture", nil, :required => true, :class => "span8", :placeholder => "Enter Picture URL Here.." %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Link URL</label>
            <div class="controls">
              <%= text_field_tag "link", nil, :required => true, :class => "span8", :placeholder => "Enter Link URL Here.." %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Name</label>
            <div class="controls">
              <%= text_field_tag "name", nil, :required => true, :class => "span8", :placeholder => "Enter Name Here.." %>
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Description</label>
            <div class="controls">
              <%= text_area_tag "description", nil, :required => true, :class => "span8", :placeholder => "Enter Description Here.." %>
            </div>
          </div>
          <div class="form-actions">
            <%= submit_tag "Send", :name => nil, :class => "btn btn-primary" %>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>